{
  "$id": "widget-spec.v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "WidgetSpec v1.0",
  "description": "Schema for M3 widget specification generation output",
  "type": "object",
  "properties": {
    "kind": {
      "enum": [
        "formula-playground",
        "graph-explorer",
        "equation-solver",
        "unit-converter",
        "physics-simulator",
        "chemistry-balancer"
      ],
      "description": "Type of interactive widget"
    },
    "expr": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "pattern": "^[a-zA-Z0-9+\\-*/().,\\s^{}\\\\x]+$",
      "description": "Mathematical expression for the widget"
    },
    "params": {
      "type": "array",
      "minItems": 1,
      "maxItems": 10,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "pattern": "^[a-zA-Z][a-zA-Z0-9_]*$",
            "description": "Parameter variable name"
          },
          "min": {
            "type": "number",
            "description": "Minimum value"
          },
          "max": {
            "type": "number",
            "description": "Maximum value"
          },
          "step": {
            "type": "number",
            "minimum": 0.001,
            "maximum": 100,
            "description": "Step size for slider"
          },
          "default": {
            "type": "number",
            "description": "Default value"
          },
          "units": {
            "type": "string",
            "maxLength": 20,
            "description": "Units for this parameter"
          },
          "description": {
            "type": "string",
            "maxLength": 100,
            "description": "Human-readable parameter description"
          }
        },
        "required": ["name", "min", "max", "step", "default"],
        "additionalProperties": false
      }
    },
    "config": {
      "type": "object",
      "description": "Widget-specific configuration",
      "properties": {
        "xRange": {
          "type": "object",
          "properties": {
            "min": { "type": "number" },
            "max": { "type": "number" }
          },
          "required": ["min", "max"]
        },
        "yRange": {
          "type": "object",
          "properties": {
            "min": { "type": "number" },
            "max": { "type": "number" }
          },
          "required": ["min", "max"]
        },
        "gridLines": {
          "type": "boolean",
          "description": "Show grid lines"
        },
        "animations": {
          "type": "boolean",
          "description": "Enable animations"
        },
        "precision": {
          "type": "integer",
          "minimum": 0,
          "maximum": 10,
          "description": "Decimal precision for calculations"
        }
      },
      "additionalProperties": false
    },
    "title": {
      "type": "string",
      "minLength": 3,
      "maxLength": 100,
      "description": "Widget title"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 300,
      "description": "Educational description of widget purpose"
    },
    "instructions": {
      "type": "array",
      "maxItems": 5,
      "items": {
        "type": "string",
        "minLength": 5,
        "maxLength": 150
      },
      "description": "Step-by-step instructions for using the widget"
    }
  },
  "required": ["kind", "expr", "params", "title", "description"],
  "additionalProperties": false,
  "allOf": [
    {
      "if": {
        "properties": {
          "kind": { "const": "formula-playground" }
        }
      },
      "then": {
        "properties": {
          "params": {
            "minItems": 1,
            "maxItems": 6
          }
        }
      }
    },
    {
      "if": {
        "properties": {
          "kind": { "const": "graph-explorer" }
        }
      },
      "then": {
        "properties": {
          "config": {
            "required": ["xRange", "yRange"]
          }
        },
        "required": ["config"]
      }
    },
    {
      "if": {
        "properties": {
          "kind": { "const": "physics-simulator" }
        }
      },
      "then": {
        "properties": {
          "config": {
            "properties": {
              "animations": { "const": true }
            }
          }
        }
      }
    }
  ]
}